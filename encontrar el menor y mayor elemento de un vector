#include <iostream>
#include <conio.h>
using namespace std;

void cargar(int vec[],int n){
	int i;
	for(i=0;i<n;i++){
		cout<<"ingresar los elemtos: ";
		cin>>vec[i];
	}
}
int mayor(int vec[],int n){
	int i,m=vec[0];
	for(i=0;i<n;i++){
		if(m<vec[i]){
			m=vec[i];
		}
	}
	return(m);
}
int menor(int vec[],int n){
	int i,b=vec[0];
	for(i=0;i<n;i++){
		if(b>vec[i]){
			b=vec[i];
		}
	}
	return(b);
}
void main(){
	int vec[100],n,may,men;
	cout<<"introduciel el tamaÃ±o del vector: ";
	cin>>n;
	cargar(vec,n);
	may=mayor(vec,n);
	men=menor(vec,n);
	cout<<"el mayor elemento --->>>: "<<may<<endl;
	cout<<"el menor elemento ---->>>: "<<men;
	getch();
}
